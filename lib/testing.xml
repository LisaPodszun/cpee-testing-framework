<description datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes" xmlns="http://riddl.org/ns/description/1.0" xmlns:xi="http://www.w3.org/2001/XInclude">
  <message name="result">
    <parameter name="testcase_summary" mimetype="application/json"/>
  </message>
  <message name="fulltest">
    <parameter name="type" type="string"/>
    <parameter name="topic" type="string"/>
    <parameter name="event" type="string"/>
    <parameter name="notification" type="string"/>
  </message>
  <message name="instance">
    <parameter name="instance" type="nonNegativeInteger"/>
  </message>
  <message name="results">
    <parameter name="results" mimetype="application/json"/>
  </message>
  <resource>
    <resource relative="fulltest">
      <get out="result"/>
      <post in="fulltest" out="instance"/>
      <resource relative="\d+">
        <get out="results"/>
      </resource>  
    </resource>
  </resource>
</description>
